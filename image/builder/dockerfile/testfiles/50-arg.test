FROM alpine:3.7

ARG argd dval
ARG argp
ARG port1 80
ARG port2 443/tcp

ENV MYVARX ${argd}
ENV MYVARY ${argp}

COPY $argd /dest
COPY /src $argd
COPY --chown=$argd /src /dest

EXPOSE $port1 $port2

LABEL $argd=$argp

STOPSIGNAL $argd

USER $argd

VOLUME $argd $argp

WORKDIR $argd

RUN echo $argd

